<div class="twelve columns">
  <h1>Listing tickets</h1>
  <% @issuances_grouped.keys.sort.each do |instance| %>
  <h4><%= instance %></h4>
  <table class="responsive">
      <thead>
    <tr>
      <th>Barcode alt text</th>
      <th>Barcode format</th>
      <th>Barcode message</th>
      <th>Barcode message encoding</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
  <tbody>
    <% for issuance in @issuances_grouped[instance] %>
    <tr>
      <td><%= issuance.barcode_alt_text %></td>
      <td><%= issuance.barcode_format %></td>
      <td><%= issuance.barcode_message %></td>
      <td><%= issuance.barcode_message_encoding %></td>
      <td><%= issuance.email %></td>
      <td><%= link_to 'Show', issuance, class: 'small button' %></td>
      <td><%= link_to 'Download', issuance_url(issuance, format: 'pkpass'), class: 'small button' %></td>
      <td><%= link_to 'Edit', edit_issuance_path(issuance), class: 'secondary small button' %></td>
      <td><%= link_to 'Destroy', issuance, method: :delete, data: { confirm: 'Are you sure?' }, class: 'alert small button' %></td>
    </tr>
    <% end %>
      </tbody>
  </table>
  <% end %>

  <br />

  <%= link_to 'New Ticket', new_issuance_path, class: 'secondary medium button' %>
</div>
